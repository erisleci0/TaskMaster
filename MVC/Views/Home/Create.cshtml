@model MVC.ViewModel.TaskCreateModel


<h2>Create Task</h2>

<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Create Task</h2>
            <hr />
        </div>
        <div class="mb-3">
            <label asp-for="@Model.TaskCreate.Name"></label>
            <input asp-for="@Model.TaskCreate.Name" class="form-control" />
        </div>

        <div class="mb-3">
            <label asp-for="@Model.TaskCreate.Description"></label>
            <input asp-for="@Model.TaskCreate.Description" class="form-control" />
        </div>

        <div class="mb-3">
            <label asp-for="@Model.Task.StatusId"></label>
            <select id="1stStatus" asp-items="@Model.Statuses" asp-for="@Model.StatusId">
                <option value="">Select Status</option>
            </select>
        </div>
        <button type="submit" class="btn btn-primary" style="width: 150px">Create</button>
        <a asp-controller="Home" asp-action="Index" class="btn btn-secondary" style="width:150px">
            Back to List
        </a>
    </div>
</form>
